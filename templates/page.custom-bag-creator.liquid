<script type="text/javascript">
  $(document).ready(function($) {
    $(".strap-color").hide();
    $(".handle-color").hide();
    
    $(".product-image-container").hide();
    var selectedProduct = "#product-" + $("#customFormBagType").val();
    $(selectedProduct).show();
    
    // Set default bag to mega-duffel
    // $('#customFormBagType option[value="mega-duffel"]').attr("selected", true);
    
    $("#customFormBagType").change(function(){
      if($(this).val() === "equipment-bag" || $(this).val() === "mega-duffel") {    
        $(".strap-color").show();
      } else {
        $(".strap-color").hide();
      }
      
      if($(this).val() === "laxpack" || $(this).val() === "laxpack-with-cooler") {  
        $(".secondary-bag-color").show();
      } else {
        $(".secondary-bag-color").hide();
      }
      
      if($(this).val() === "equipment-bag" || $(this).val() === "mega-duffel") {  
        $(".handle-color").show();
      } else {
        $(".handle-color").hide();
      }
      
       $(".product-image-container").hide();
       var selectedProduct = "#product-" + $(this).val();
       $(selectedProduct).show();
    });

    
    // $(".fancybox").fancybox();
    var fancyBoxCheck = setInterval(function() {
        var fancyBox =  $(".fancybox");
        if (fancyBox.length) {
            fancyBox.fancybox();
            clearInterval(fancyBoxCheck);
        }
    }, 100);
    {% if product.tags contains "Custom" %}
        $(".product-photo-thumb").fancybox();
    {% endif %}
  });
</script>