{% doc %}
  @prompt
    a standard hero area with large H1 text, a subheading, and full cover background image, the h1 color and position is not working, fix it
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.hero_height }}px;
    display: flex;
    align-items: {{ block.settings.content_vertical_alignment }};
    justify-content: {{ block.settings.content_horizontal_alignment }};
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: {{ block.settings.content_max_width }}px;
    padding: 40px 20px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px !important;
    color: {{ block.settings.heading_color }} !important;
    margin: 0 0 {{ block.settings.heading_spacing }}px !important;
    line-height: 1.2 !important;
    font-weight: 700 !important;
    text-align: {{ block.settings.text_alignment }} !important;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px !important;
    color: {{ block.settings.subheading_color }} !important;
    margin: 0 !important;
    line-height: 1.5 !important;
    text-align: {{ block.settings.text_alignment }} !important;
  }

  .ai-hero-button-wrapper-{{ ai_gen_id }} {
    margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.hero_height_mobile }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px !important;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.75 }}px !important;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: 30px 15px;
    }
  }
{% endstyle %}

<ai-hero-{{ ai_gen_id }} class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <div class="ai-hero-button-wrapper-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="ai-hero-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</ai-hero-{{ ai_gen_id }}>

<script>
  (function() {
    class AiHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('ai-hero-{{ ai_gen_id }}', AiHero{{ ai_gen_id }});
  })();
</script>

