<section class="home-team-customs-block uk-margin-top">
  <div class="uk-grid-small uk-child-width-expand@s uk-grid-match" uk-grid>
    <div>
      <div class="uk-card uk-card-primary uk-card-body">
        <div uk-grid>
        <div class="uk-width-1-3@xl uk-width-1-2@l">
          <h3 class="uk-text-bold">{{ section.settings.left-header }}</h3>
          <p>{{ section.settings.left-text }}</p>
          <a class="uk-button uk-button-primary uk-text-bold uk-margin-medium-top uk-width-1-1@s" href="/pages/{{ section.settings.left-button-link }}">{{ section.settings.left-button-text }}</a>
        </div>
        <div class="uk-width-2-3@xl uk-width-1-2@l">
          <img width="563" height="256" src="{{ section.settings.left-image | image_url }}" alt="">
        </div>
        </div>
      </div>
    </div>
    <div>
      <div class="uk-card uk-card-primary uk-card-body" >
    <div uk-grid>
        <div class="uk-width-1-3@xl uk-width-1-2@l">
          <h3 class="uk-text-bold">{{ section.settings.right-header }}</h3>
          <p>{{ section.settings.right-text }}</p>
          <a class="uk-button uk-button-primary uk-text-bold uk-margin-medium-top uk-width-1-1@s" href="/pages/{{ section.settings.right-button-link }}">{{ section.settings.right-button-text }}</a>
        </div>
        <div class="uk-width-2-3@xl uk-width-1-2@l">
          <img width="563" height="256" src="{{ section.settings.right-image | image_url }}" alt="">
        </div>
      </div>
    </div>
    </div>
  </div>
</section>


{% schema %}
  {
        "name": "Home Team Customs Blocks",
        "limit": 1,
        "settings": [
          {
              "type": "text",
              "id": "left-header",
              "label": "Left Header"
          },
          {
              "type": "text",
              "id": "left-text",
              "label": "Left Text"
          },
          {
              "type": "text",
              "id": "left-button-text",
              "label": "Left Button Text",
              "default": "Get started"
          },
          {
              "type": "page",
              "id": "left-button-link",
              "label": "Left Button Link",
              "info": "Select a page"
          },
          {
              "type": "image_picker",
              "id": "left-image",
              "label": "Left Image",
              "info": "Select an image"
          },
          {
              "type": "text",
              "id": "right-header",
              "label": "Right Header"
          },
          {
              "type": "text",
              "id": "right-text",
              "label": "Right Text"
          },
          {
              "type": "text",
              "id": "right-button-text",
              "label": "Right Button Text",
              "default": "Get started"
          },
          {
              "type": "page",
              "id": "right-button-link",
              "label": "Right Button Link",
              "info": "Select a page"
          },
          {
              "type": "image_picker",
              "id": "right-image",
              "label": "Right Image",
              "info": "Select an image"
          }
        ]
      }
    {% endschema %}